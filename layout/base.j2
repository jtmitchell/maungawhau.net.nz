<!DOCTYPE html>
<html lang="en">
  <head>
    {% block starthead %}{% endblock starthead %}
    <meta charset="utf-8">
    <title>{% block title %}{{ resource.meta.title }}{% endblock %} | {{ site_title }}</title>
    <meta name="description" content="{{ resource.meta.description }}">
    <meta name="author" content="{{ resource.meta.author }}">
    <meta name="google-site-verification" content="{{ resource.meta.google_verify }}">

	<meta name="viewport" content="width=device-width, minimum-scale=1.0, initial-scale=1.0, user-scalable=yes">
  	<script src="{{ media_url('components/platform/platform.js') }}"></script>

	<link rel="import" href="{{ media_url('components/font-roboto/roboto.html') }}">
    
	<link rel="import" href="{{ media_url('components/core-header-panel/core-header-panel.html') }}">
	<link rel="import" href="{{ media_url('components/core-toolbar/core-toolbar.html') }}">
	<link rel="import" href="{{ media_url('components/core-item/core-item.html') }}">
	<link rel="import" href="{{ media_url('components/core-scaffold/core-scaffold.html') }}">
	<link rel="import" href="{{ media_url('components/core-menu/core-menu.html') }}">
	<link rel="import" href="{{ media_url('components/paper-item/paper-item.html') }}">
	<link rel="import" href="{{ media_url('components/core-drawer-panel/core-drawer-panel.html') }}">
	<link rel="import" href="{{ media_url('components/paper-tabs/paper-tabs.html') }}">

	<link rel="import" href="{{ media_url('elements/contact-details/contact-details.html') }}">

	<style>
		body {
		  font-family: sans-serif;
		}
		#navheader {
		  background-color: #56BA89;
		}
		.content {
		  padding: 20px;
		}
    	.background-image {
      		background-image: url(/media/images/mt-eden_colour.png);
    	}
	</style>
    {% block basecss %}
  	{% endblock basecss %}
	
	{% block css %}{% endblock %}
	
	{% block favicons %}
	{% endblock favicons %}
	
	{% block headjs %}
	{% endblock headjs %}
	
	{% block endhead %}{% endblock endhead %}

	{% block analytics %}
	{% include "analytics.j2" %}
	{% endblock analytics %}
  </head>

  <body unresolved touch-action="auto">

{% block body %}
<core-scaffold>

	<core-header-panel navigation flex mode="seamed">
	    <core-toolbar class="background-image" id="navheader">{{ site_title }}</core-toolbar>
	    <core-menu id="menu">
			{% for item in menu %}<paper-item name="{{item.url}}" label="{{item.title}}"></paper-item>
			{% endfor %}
	    	<contact-details></contact-details>
	    </core-menu>
  	</core-header-panel>

	<div tool>
	{% block page_title %}<span>{{ resource.meta.title }}</span>{% endblock %}
	{% if resource.meta.subtitle %}<span><small>{% block page_subtitle %}{{ resource.meta.subtitle }}</span>{% endblock %}</small>{% endif %}
	</div>
	
	<div class="content">
	{% block content %}
		{% block slideshow %}{% endblock %}
		{% filter markdown -%}
		{% block main %}{% endblock %}
		{%- endfilter %}
	{% endblock %}
	</div>
	
</core-scaffold>  
{% endblock body %}
    
{% block js %}
{# Javascript at the bottom for fast page loading #}
{% block scripts %}
{% endblock scripts %}
<script>
// setup handlers for menu clicks
var menu = document.querySelector('core-menu');
menu.addEventListener('core-select', function(e){
	if (e.detail.isSelected){
		console.log(menu.selected);
		window.location.href = menu.selected;
	}
})
</script>
{% endblock js %}
</body>
</html>
